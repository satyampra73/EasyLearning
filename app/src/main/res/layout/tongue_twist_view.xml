<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="@dimen/_10dp"
    android:layout_marginTop="@dimen/_10dp"
    app:cardCornerRadius="10dp"
    android:layout_marginEnd="@dimen/_10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtTitleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/_15dp"
            android:layout_marginTop="@dimen/_10dp"
            android:layout_marginEnd="@dimen/_5dp"
            android:layout_marginBottom="@dimen/_5dp"
            android:text="I have got a date at a quarter to eight; I’ll see you at the gate, so don’t be late"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/ltPlayBtn"
            android:layout_width="@dimen/_80dp"
            android:layout_height="30dp"
            android:layout_below="@id/txtTitleText"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/_5dp"
            android:layout_marginTop="@dimen/_5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="@dimen/_5dp"
            android:background="@drawable/play_buttonbg"
            android:orientation="horizontal"
            android:visibility="visible">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_10dp"
                android:src="@drawable/play" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_10dp"
                android:text="Play"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ltPauseBtn"
            android:layout_width="@dimen/_80dp"
            android:layout_height="30dp"
            android:layout_below="@id/txtTitleText"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/_5dp"
            android:layout_marginTop="@dimen/_5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="@dimen/_5dp"
            android:visibility="gone"
            android:background="@drawable/play_buttonbg"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_10dp"
                android:src="@drawable/pause" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_10dp"
                android:textSize="12sp"
                android:text="Pause" />

        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressPlayPause"
            android:layout_width="@dimen/_60dp"
            android:layout_height="@dimen/_30dp"
            android:layout_below="@id/txtTitleText"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/_5dp"
            android:layout_marginTop="@dimen/_5dp"
            android:layout_marginEnd="100dp"
            android:visibility="gone"
            android:layout_marginBottom="@dimen/_5dp" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>