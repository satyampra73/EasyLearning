<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="20dp"
    android:backgroundTint="@color/white"
    app:cardCornerRadius="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/txtPlanPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="225.00 Rs."
            android:layout_marginTop="10dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/txtTransactionDesc"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sp"
            android:layout_below="@+id/txtPlanPrice"
            android:text="Amount Deduct For Remove Ads Plan Purchase" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtTransactionDesc"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sp"
                android:text="Mode :" />
            <TextView
                android:id="@+id/txtPayMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sp"
                android:text="Online" />
        </LinearLayout>


        <ImageView
            android:id="@+id/imgTransactionImage"
            android:layout_width="@dimen/_20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="5dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            />

        <TextView
            android:id="@+id/txtPurchaseDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/imgTransactionImage"
            android:text="02 Sep 2021"
            android:textSize="@dimen/_13sp"
            android:layout_marginTop="10dp"
            android:textAlignment="textEnd"
            />

    </RelativeLayout>
</androidx.cardview.widget.CardView>
